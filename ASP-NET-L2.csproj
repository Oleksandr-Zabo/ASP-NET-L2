<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>ASP_NET_L2</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="ASP-NET-L2.DAL\ASP-NET-L2.DAL.csproj" />
  </ItemGroup>

  <!-- Exclude DAL source files from main project compilation -->
  <ItemGroup>
    <Compile Remove="ASP-NET-L2.DAL\**" />
    <Content Remove="ASP-NET-L2.DAL\**" />
    <EmbeddedResource Remove="ASP-NET-L2.DAL\**" />
    <None Remove="ASP-NET-L2.DAL\**" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="9.0.11">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>

</Project>
