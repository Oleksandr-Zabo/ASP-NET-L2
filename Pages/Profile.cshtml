@page
@model ASP_NET_L2.Pages.ProfileModel
@{
}

<style>
    .profile-container {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .profile-container h2 {
        text-align: center;
        color: #333;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
        color: #555;
    }

    .form-group input,
    .form-group textarea,
    .form-group select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ddd;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .form-group textarea {
        resize: vertical;
        min-height: 80px;
    }

    .radio-group {
        display: flex;
        gap: 15px;
    }

    .radio-group label {
        font-weight: normal;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .checkbox-group {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .checkbox-group label {
        font-weight: normal;
    }

    .button-group {
        display: flex;
        gap: 10px;
        margin-top: 20px;
    }

    button {
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
    }

    button[type="submit"] {
        background-color: #4CAF50;
        color: white;
    }

    button[type="submit"]:hover {
        background-color: #45a049;
    }

    button[type="reset"] {
        background-color: #f44336;
        color: white;
    }

    button[type="reset"]:hover {
        background-color: #da190b;
    }

    button[type="submit"][asp-page-handler="Delete"] {
        background-color: #ff6347;
        color: white;
    }

    button[type="submit"][asp-page-handler="Delete"]:hover {
        background-color: #e5533d;
    }

    .success-message {
        padding: 15px;
        background-color: #4CAF50;
        color: white;
        border-radius: 4px;
        margin-bottom: 20px;
        text-align: center;
    }

    .profile-display {
        margin-top: 30px;
        padding: 20px;
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
    }

    .profile-display h3 {
        color: #333;
        border-bottom: 2px solid #4CAF50;
        padding-bottom: 10px;
    }

    .profile-info {
        display: grid;
        grid-template-columns: 150px 1fr;
        gap: 10px;
        margin-top: 15px;
    }

    .profile-info strong {
        color: #555;
    }

    .profile-info span {
        color: #333;
    }
</style>

<div class="profile-container">
    <h2>User Profile</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message">
            @TempData["SuccessMessage"]
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label>First Name *</label>
            <input type="text" asp-for="Form.FirstName" />
            <span asp-validation-for="Form.FirstName" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label>Last Name *</label>
            <input type="text" asp-for="Form.LastName" />
            <span asp-validation-for="Form.LastName" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label>Email *</label>
            <input type="email" asp-for="Form.Email" />
            <span asp-validation-for="Form.Email" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label>Phone Number *</label>
            <input type="tel" asp-for="Form.PhoneNumber" placeholder="+380XXXXXXXXX" />
            <span asp-validation-for="Form.PhoneNumber" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label>Gender *</label>
            <div class="radio-group">
                <label><input type="radio" value="Male" asp-for="Form.Gender" /> Male</label>
                <label><input type="radio" value="Female" asp-for="Form.Gender" /> Female</label>
            </div>
            <span asp-validation-for="Form.Gender" style="color: red;"></span>
        </div>

        <div class="form-group">
            <label>Birth Date</label>
            <input type="date" asp-for="Form.BirthDate" />
        </div>

        <div class="form-group">
            <label>Country</label>
            <input type="text" asp-for="Form.Country" />
        </div>

        <div class="form-group">
            <label>City</label>
            <input type="text" asp-for="Form.City" />
        </div>

        <div class="form-group">
            <label>About Me</label>
            <textarea asp-for="Form.AboutMe" maxlength="500"></textarea>
            <span asp-validation-for="Form.AboutMe" style="color: red;"></span>
            <small style="color: #888;">Maximum 500 characters</small>
        </div>

        <div class="form-group">
            <label>LinkedIn Profile</label>
            <input type="url" asp-for="Form.LinkedInUrl" placeholder="https://linkedin.com/in/your-profile" />
            <span asp-validation-for="Form.LinkedInUrl" style="color: red;"></span>
        </div>

        <div class="form-group">
            <div class="checkbox-group">
                <input type="checkbox" asp-for="Form.IsOpenToWork" />
                <label>Open to work</label>
            </div>
        </div>

        <div class="button-group">
            <button type="submit" asp-page-handler="Save">Save</button>
            <button type="submit" asp-page-handler="Reset">Reset</button>
            <a href="/ProfileInfo" class="btn-view" style="background-color: #2196F3; color: white; text-decoration: none; padding: 10px 20px; border-radius: 4px; display: inline-block;">View Profile</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}