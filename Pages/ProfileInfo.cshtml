@page
@model ASP_NET_L2.Pages.ProfileInfoModel
@{
    ViewData["Title"] = "Profile Information";
}

<style>
    .profile-container {
        max-width: 700px;
        margin: 50px auto;
        padding: 30px;
        border: 1px solid #ccc;
        border-radius: 8px;
        background-color: #f9f9f9;
    }

    .profile-container h2 {
        text-align: center;
        color: #333;
        margin-bottom: 30px;
    }

    .success-message {
        padding: 15px;
        background-color: #4CAF50;
        color: white;
        border-radius: 4px;
        margin-bottom: 20px;
        text-align: center;
    }

    .no-profile {
        text-align: center;
        padding: 40px;
        color: #888;
    }

    .no-profile a {
        color: #4CAF50;
        text-decoration: none;
        font-weight: bold;
    }

    .no-profile a:hover {
        text-decoration: underline;
    }

    .profile-info {
        display: grid;
        grid-template-columns: 180px 1fr;
        gap: 15px;
        margin-bottom: 30px;
        background-color: #fff;
        padding: 25px;
        border-radius: 8px;
        border: 1px solid #ddd;
    }

    .profile-info strong {
        color: #555;
        font-weight: 600;
    }

    .profile-info span {
        color: #333;
    }

    .profile-info a {
        color: #4CAF50;
        text-decoration: none;
    }

    .profile-info a:hover {
        text-decoration: underline;
    }

    .button-group {
        display: flex;
        gap: 10px;
        justify-content: center;
    }

    button, .btn-edit {
        padding: 12px 30px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        transition: background-color 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-delete {
        background-color: #ff6347;
        color: white;
    }

    .btn-delete:hover {
        background-color: #e5533d;
    }

    .btn-edit {
        background-color: #4CAF50;
        color: white;
    }

    .btn-edit:hover {
        background-color: #45a049;
    }
</style>

<div class="profile-container">
    <h2>Profile Information</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="success-message">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (Model.HasProfile)
    {
        <div class="profile-info">
            <strong>First Name:</strong>
            <span>@Model.FirstName</span>

            <strong>Last Name:</strong>
            <span>@Model.LastName</span>

            <strong>Email:</strong>
            <span>@Model.Email</span>

            <strong>Phone:</strong>
            <span>@Model.PhoneNumber</span>

            <strong>Gender:</strong>
            <span>@Model.Gender</span>

            @if (Model.BirthDate.HasValue)
            {
                <strong>Birth Date:</strong>
                <span>@Model.BirthDate.Value.ToString("dd.MM.yyyy")</span>
            }

            @if (!string.IsNullOrEmpty(Model.Country))
            {
                <strong>Country:</strong>
                <span>@Model.Country</span>
            }

            @if (!string.IsNullOrEmpty(Model.City))
            {
                <strong>City:</strong>
                <span>@Model.City</span>
            }

            @if (!string.IsNullOrEmpty(Model.AboutMe))
            {
                <strong>About Me:</strong>
                <span>@Model.AboutMe</span>
            }

            @if (!string.IsNullOrEmpty(Model.LinkedInUrl))
            {
                <strong>LinkedIn:</strong>
                <span><a href="@Model.LinkedInUrl" target="_blank">@Model.LinkedInUrl</a></span>
            }

            <strong>Open to Work:</strong>
            <span>@(Model.IsOpenToWork ? "Yes" : "No")</span>
        </div>

        <form method="post">
            <div class="button-group">
                <a href="/Profile" class="btn-edit">Edit Profile</a>
                <button type="submit" asp-page-handler="Delete" class="btn-delete" onclick="return confirm('Are you sure you want to delete your profile?');">Delete Profile</button>
            </div>
        </form>
    }
    else
    {
        <div class="no-profile">
            <p>No profile found.</p>
            <p><a href="/Profile">Create your profile</a></p>
        </div>
    }
</div>
